{
  "name": "jobcloud/avro-message-generator",
  "description": "Jobcloud avro message generator",
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Jobcloud AG",
      "homepage": "https://careers.jobcloud.ch/en/our-team/?term=133"
    }
  ],
  "keywords": [
    "php",
    "kafka",
    "message",
    "avro"
  ],
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-rdkafka": "^4.0"
  },
  "require-dev": {
    "chubbyphp/chubbyphp-mock": "^1.4",
    "infection/infection": "^0.17",
    "mavimo/phpstan-junit": "^0.3",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.3",
    "rregeer/phpunit-coverage-check": "^0.3",
    "squizlabs/php_codesniffer": "^3.5",
    "kwn/php-rdkafka-stubs": "^2.0",
    "jobcloud/php-kafka-lib": "^1.0.0",
    "flix-tech/avro-serde-php": "^1.4",
    "fakerphp/faker": "^1.10"
  },
  "suggest": {
    "jobcloud/php-kafka-lib": "Is needed for fetching schemas from registry",
    "flix-tech/avro-serde-php": "Is needed for Avro support",
    "fakerphp/faker": "Is needed for predefined message data"
  },
  "autoload": {
    "psr-4": {
      "Jobcloud\\Avro\\Message\\Generator\\": "src/",
      "Jobcloud\\Avro\\Message\\Generator\\Tests\\": "tests/"
    }
  }
}